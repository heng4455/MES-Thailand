{
  "name": "mes-thailand-frontend",
  "version": "1.0.0",
  "description": "MES Thailand Frontend - Electron + React App",
  "author": "MES Thailand Team",
  "main": "public/electron.js",
  "homepage": "./",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "dev": "cross-env NODE_ENV=development ELECTRON_DISABLE_SECURITY_WARNINGS=true concurrently \"npm run react:dev\" \"wait-on http://localhost:3000 && npm run electron:dev\"",
    "react:dev": "react-scripts start",
    "electron:dev": "cross-env NODE_ENV=development ELECTRON_DISABLE_SECURITY_WARNINGS=true electron .",
    "build": "react-scripts build",
    "electron": "electron .",
    "electron:build": "npm run build && electron-builder",
    "electron:dist": "npm run build && electron-builder --publish=never",
    "desktop": "node run-desktop.js",
    "demo:desktop": "npm run build && npm run desktop",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.50.0",
    "axios": "^1.3.2",
    "chart.js": "^4.2.1",
    "clsx": "^1.2.1",
    "exceljs": "^4.3.0",
    "file-saver": "^2.0.5",
    "framer-motion": "^9.0.4",
    "i18next": "^22.4.10",
    "i18next-browser-languagedetector": "^7.0.1",
    "jspdf": "^2.5.1",
    "lottie-react": "^2.4.0",
    "lucide-react": "^0.315.0",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.2.0",
    "react-datepicker": "^4.10.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.43.1",
    "react-hot-toast": "^2.4.0",
    "react-i18next": "^12.1.4",
    "react-icons": "^5.5.0",
    "react-router-dom": "^6.8.1",
    "react-select": "^5.7.0",
    "react-signature-canvas": "^1.0.6",
    "recharts": "^2.5.0",
    "socket.io-client": "^4.6.1",
    "tailwind-merge": "^1.10.0"
  },
  "devDependencies": {
    "@types/file-saver": "^2.0.5",
    "autoprefixer": "^10.4.13",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "electron": "23.1.0",
    "electron-builder": "^23.6.0",
    "postcss": "^8.4.21",
    "react-scripts": "5.0.1",
    "tailwindcss": "^3.2.7",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.mesThailand.app",
    "productName": "MES Thailand",
    "directories": {
      "output": "C:\\temp\\mes-build",
      "buildResources": "build-resources"
    },
    "files": [
      "build/**/*",
      "public/electron.js",
      "public/preload.js",
      "node_modules/**/*",
      "!node_modules/.cache/**/*",
      "!node_modules/**/test/**/*",
      "!node_modules/**/*.d.ts",
      "!node_modules/**/README.md",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}"
    ],
    "extraMetadata": {
      "main": "public/electron.js"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64"]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": ["x64"]
        },
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "requestedExecutionLevel": "asInvoker",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ],
      "category": "Office",
      "maintainer": "MES Thailand Team"
    },
    "portable": {
      "artifactName": "${productName}-Portable-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "MES Thailand",
      "displayLanguageSelector": false,
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "compression": "store",
    "electronVersion": "23.1.0",
    "removePackageScripts": true
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
